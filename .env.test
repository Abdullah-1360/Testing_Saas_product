# Test Environment Configuration
NODE_ENV=test
PORT=3001
API_VERSION=v1

# Test Database Configuration
DATABASE_URL=postgresql://test:test@localhost:5432/wp_autohealer_test
DATABASE_POOL_SIZE=5

# Test Redis Configuration
REDIS_URL=redis://localhost:6379/1

# Test JWT Configuration
JWT_SECRET=test-jwt-secret-not-for-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=1d

# Test Session Configuration
SESSION_SECRET=test-session-secret-not-for-production
SESSION_MAX_AGE=3600000

# Test Encryption Configuration
ENCRYPTION_KEY=test-encryption-key-32-bytes-long

# Test SSH Configuration
SSH_CONNECTION_TIMEOUT=5000
SSH_COMMAND_TIMEOUT=10000
SSH_MAX_CONNECTIONS=2
MOCK_SSH_CONNECTIONS=true

# Test Rate Limiting (more permissive)
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=1000

# Test Logging Configuration
LOG_LEVEL=error
LOG_FILE_ENABLED=false

# Test Retention Policy
DEFAULT_RETENTION_DAYS=1
MAX_RETENTION_DAYS=7

# Test Job Processing
MAX_FIX_ATTEMPTS=3
INCIDENT_COOLDOWN_WINDOW=60
CIRCUIT_BREAKER_THRESHOLD=2
CIRCUIT_BREAKER_TIMEOUT=30000

# Test Verification
VERIFICATION_TIMEOUT=5000
VERIFICATION_RETRY_ATTEMPTS=1

# Test Features
ENABLE_SWAGGER=false
ENABLE_BULL_BOARD=false