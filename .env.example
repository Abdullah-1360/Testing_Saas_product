# Application Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/wp_autohealer
DATABASE_POOL_SIZE=10

# Redis Configuration (for BullMQ)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_MAX_AGE=86400000

# Encryption Configuration (libsodium)
ENCRYPTION_KEY=your-32-byte-encryption-key-change-this-in-production

# SSH Configuration
SSH_CONNECTION_TIMEOUT=30000
SSH_COMMAND_TIMEOUT=60000
SSH_MAX_CONNECTIONS=10

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/wp-autohealer.log
LOG_MAX_FILES=30
LOG_MAX_SIZE=20m

# Retention Policy Configuration
DEFAULT_RETENTION_DAYS=3
MAX_RETENTION_DAYS=7

# Job Processing Configuration
MAX_FIX_ATTEMPTS=15
INCIDENT_COOLDOWN_WINDOW=600
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=300000

# Verification Configuration
VERIFICATION_TIMEOUT=30000
VERIFICATION_RETRY_ATTEMPTS=3

# External Integrations
WEBHOOK_SECRET=your-webhook-secret-change-this-in-production

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_ADDRESS=noreply@wp-autohealer.com
SMTP_FROM_NAME=WP-AutoHealer
SMTP_USE_TLS=true

# Development/Testing
ENABLE_SWAGGER=true
ENABLE_BULL_BOARD=true
MOCK_SSH_CONNECTIONS=false